{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pipeline Output Record v1",
  "type": "object",
  "required": [
    "run_id",
    "pipeline_name",
    "paper_id",
    "question_id",
    "question",
    "reference_answer",
    "question_type",
    "is_answerable",
    "gold_evidence_para_ids",
    "models",
    "retrieval",
    "generation",
    "logs"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "description": "Unique identifier for this run (e.g., timestamp+pipeline)."
    },
    "pipeline_name": {
      "type": "string",
      "description": "Pipeline identifier (e.g., P0_dense_baseline)."
    },
    "paper_id": {
      "type": "integer"
    },
    "question_id": {
      "type": "integer"
    },
    "question": {
      "type": "string"
    },
    "reference_answer": {
      "type": "string"
    },
    "question_type": {
      "type": "string",
      "enum": [
        "LIST",
        "NUMERIC",
        "STRING",
        "CATEGORICAL",
        "FREE_TEXT"
      ]
    },
    "is_answerable": {
      "type": "boolean"
    },
    "gold_evidence_para_ids": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "models": {
      "type": "object",
      "required": [
        "embedding_model",
        "llm_model"
      ],
      "properties": {
        "embedding_model": {
          "type": "string"
        },
        "llm_model": {
          "type": "string"
        },
        "reranker_model": {
          "type": [
            "string",
            "null"
          ]
        },
        "judge_model": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "retrieval": {
      "type": "object",
      "required": [
        "k",
        "retrieved_para_ids",
        "retrieval_scores",
        "top_chunks",
        "retrieved_context"
      ],
      "properties": {
        "k": {
          "type": "integer",
          "minimum": 1
        },
        "retrieved_para_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "retrieval_scores": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "top_chunks": {
          "type": "array",
          "minItems": 1,
          "maxItems": 3,
          "items": {
            "type": "object",
            "required": [
              "rank",
              "score",
              "para_ids",
              "text"
            ],
            "properties": {
              "rank": {
                "type": "integer",
                "minimum": 1
              },
              "chunk_id": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "para_ids": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "score": {
                "type": "number"
              },
              "text": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "retrieved_context": {
          "type": "string",
          "description": "Concatenation of top-k retrieved texts (in rank order)."
        },
        "hit_at_1": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "hit_at_3": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "hit_at_5": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "mrr": {
          "type": [
            "number",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "generation": {
      "type": "object",
      "required": [
        "model_answer"
      ],
      "properties": {
        "model_answer": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "logs": {
      "type": "object",
      "required": [
        "latency_ms",
        "tokens_input",
        "tokens_output",
        "total_tokens",
        "estimated_cost_usd"
      ],
      "properties": {
        "latency_ms": {
          "type": "number",
          "minimum": 0
        },
        "tokens_input": {
          "type": "integer",
          "minimum": 0
        },
        "tokens_output": {
          "type": "integer",
          "minimum": 0
        },
        "total_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "estimated_cost_usd": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}